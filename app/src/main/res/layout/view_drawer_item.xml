<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/subtitle_item"
    android:clickable="false"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false"
    android:focusableInTouchMode="false">

    <ImageButton
        android:id="@+id/item_logo"
        android:layout_width="@dimen/item"
        android:layout_height="@dimen/item"
        android:src="@drawable/bbc_logo"
        android:background="@null"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>
    <TextView
        android:id="@+id/item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_logo"
        android:layout_toLeftOf="@+id/item_action"
        android:layout_centerVertical="true"
        android:text="Denny"
        android:textSize="@dimen/text"
        android:textColor="@color/content"
        android:fontFamily="sans-serif-medium"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>
    <ImageButton
        android:id="@+id/item_action"
        android:layout_width="@dimen/item"
        android:layout_height="@dimen/item"
        android:src="@drawable/ic_add_black_18dp"
        android:alpha="0.5"
        android:background="@null"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

</RelativeLayout>