<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/drawer.width"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:layout_gravity="start">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary.dark"
        android:paddingTop="@dimen/statusbar.height"
        android:paddingBottom="@dimen/statusbar.height">

        <TextView
            style="@style/Subheader"
            android:text="@string/feed.noticias"/>
        <View style="@style/Separator"/>
        <LinearLayout
            android:id="@+id/drawer.list.noticias"
            style="@style/VerticalList"/>

        <View style="@style/Separator"/>

        <TextView
            style="@style/Subheader"
            android:text="@string/feed.opinion"/>
        <View style="@style/Separator"/>
        <LinearLayout
            android:id="@+id/drawer.list.opinion"
            style="@style/VerticalList"/>

        <View style="@style/Separator"/>

        <TextView
            style="@style/Subheader"
            android:text="@string/feed.deportes"/>
        <View style="@style/Separator"/>
        <LinearLayout
            android:id="@+id/drawer.list.deportes"
            style="@style/VerticalList"/>

        <View style="@style/Separator"/>

        <TextView
            style="@style/Subheader"
            android:text="@string/feed.vida.y.estilo"/>
        <View style="@style/Separator"/>
        <LinearLayout
            android:id="@+id/drawer.list.vida.y.estilo"
            style="@style/VerticalList"/>

    </LinearLayout>

</ScrollView>