<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/scheduled.toolbar"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar.height"/>
    <ScrollView
        android:layout_below="@+id/scheduled.toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/scheduled.entries"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </ScrollView>
    <LinearLayout
        android:id="@+id/empty.scheduled"
        android:layout_below="@+id/scheduled.toolbar"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_language_black_48dp"/>
        <TextView
            android:text="@string/empty.title"
            android:textSize="@dimen/list.item.primary.text"
            android:textStyle="bold"
            android:layout_margin="@dimen/margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:text="@string/empty.message.scheduled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>